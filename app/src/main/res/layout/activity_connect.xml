<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bobby.musicdirect.Connect">

    <EditText
        android:id="@+id/editText2"
        android:layout_width="368dp"
        android:layout_height="42dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Welcome To Music Direct!"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/First"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="98dp"
        android:layout_marginStart="98dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Select a HOST"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="128dp" />

    <EditText
        android:id="@+id/OR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="OR"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="424dp" />

    <Button
        android:id="@+id/createNewSession"
        android:layout_width="311dp"
        android:layout_height="69dp"
        android:text="Create New Session"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="499dp" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Your Device Name"
        android:textAlignment="center"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="59dp" />

    <EditText
        android:id="@+id/editText7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="DeviceNameDefault"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="90dp" />

    <ListView
        android:layout_width="0dp"
        android:layout_height="239dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="171dp" />

</android.support.constraint.ConstraintLayout>
